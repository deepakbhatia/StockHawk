<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/touch_selector"
    android:stateListAnimator="@animator/list_item_raise"
    android:layout_marginEnd="@dimen/elementPadding"
    android:layout_marginRight="@dimen/elementPadding"
    android:layout_marginStart="@dimen/elementPadding"
    android:layout_marginLeft="@dimen/elementPadding">

    <TextView
        android:id="@+id/symbol"
        style="@style/StockSymbolTextStyle"

        android:gravity="start|center_vertical"
        tools:text="GOOG" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        android:layout_marginEnd="@dimen/stockListMargin"
        android:layout_marginRight="@dimen/stockListMargin">

        <TextView
            android:id="@+id/price"
            style="@style/StockPriceTextStyle"
            android:layout_marginEnd="@dimen/stockListMargin"
            android:layout_marginRight="@dimen/stockListMargin"
            tools:text="1000.00" />

        <TextView
            android:id="@+id/change"
            style="@style/StockChangeStyle"
            android:paddingLeft="@dimen/elementPadding"
            android:paddingStart="@dimen/elementPadding"
            android:paddingEnd="@dimen/elementPadding"
            android:paddingRight="@dimen/elementPadding"
            tools:text="100%" />
    </LinearLayout>

</LinearLayout>
