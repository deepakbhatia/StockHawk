<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/detail_date_textview"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/elementPadding"
        android:layout_marginTop="@dimen/elementPadding"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/colorPrimaryDark"
        android:text="Today, April 03"
        tools:text="Today, April 03" />

    <TextView
        android:id="@+id/stock_price_textview"
        android:layout_below="@+id/detail_date_textview"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/elementPadding"
        android:layout_marginTop="@dimen/elementPadding"
        android:fontFamily="sans-serif-light"
        android:gravity="center_horizontal"
        android:textColor="@color/colorPrimaryText"
        android:textSize="72sp"
        app:layout_columnSpan="2"
        app:layout_columnWeight="1"
        app:layout_gravity="fill_horizontal"
        android:text="$113"
        tools:text="$113" />
    <TextView
        android:id="@+id/detail_high_textview"
        android:layout_below="@id/stock_price_textview"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/abc_list_item_padding_horizontal_material"
        android:layout_marginStart="@dimen/abc_list_item_padding_horizontal_material"

        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/colorPrimaryText"
        android:textSize="24sp"
        android:text="$113.709"
        tools:text="$113.709" />

    <TextView
        android:id="@+id/detail_low_textview"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/abc_list_item_padding_horizontal_material"
        android:layout_marginEnd="@dimen/abc_list_item_padding_horizontal_material"
        android:layout_below="@+id/stock_price_textview"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/colorPrimaryText"
        android:textSize="24sp"
        android:text="$110.43"
        tools:text="$110.43" />

    <TextView
        android:id="@+id/detail_change_textview"
        style="@style/PercentChangeTextStyle"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/stock_price_textview"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:fontFamily="sans-serif-light"
        android:gravity="center_horizontal"
        android:textColor="@color/colorPrimaryText"
        android:textSize="24sp"
        android:background="@drawable/percent_change_pill_green"
        android:text="100%"
        tools:text="100%" />

</RelativeLayout>