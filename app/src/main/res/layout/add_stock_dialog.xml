<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <EditText
        android:id="@+id/dialog_stock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/add_stock_dialog_margin"
        android:layout_marginLeft="@dimen/add_stock_dialog_margin"
        android:layout_marginStart="@dimen/add_stock_dialog_margin"
        android:layout_marginEnd="@dimen/add_stock_dialog_margin"
        android:layout_marginRight="@dimen/add_stock_dialog_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:contentDescription="@string/enter_the_stock_symbol_you_want_to_track"
        android:hint="@string/dialog_hint"
        android:inputType="textCapCharacters" />

</LinearLayout>
